@{
    ViewBag.Title = LanguageResource.EditBrand;
}
@using Eagle.Core.Settings
@model Eagle.Services.Dtos.Business.BrandEditEntry
    

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", id = "frmEditBrand", name = "frmEditBrand", }))
{
    <div class="panel panel-default">

        <div class="panel-heading text-bold">
            <div class='page-header margin-top-5 margin-bottom-0'>
                <div class='btn-toolbar pull-right'>
                    <div class='btn-group'>
                        <input type="button" class="btn btn-default reset btnReset" data-mode="edit" data-form="frmEditBrand" data-id="@Model.BrandId" data-url='@Url.Action("Edit", "Brand")' value="@LanguageResource.Reset" />
                        <input type="button" class="btn btn-primary save add edit editBrand" data-mode="edit" data-form="frmEditBrand" data-id="@Model.BrandId" data-url='@Url.Action("Edit", "Brand")' value="@LanguageResource.Save" />
                    </div>
                </div>
                <h4><span class="glyphicon glyphicon-star"></span> @LanguageResource.EditBrand</h4>
            </div>
        </div>

        <div class="panel-body padding-top-0">
            <div id="formMessage" class="form-message">
                @Html.AntiForgeryToken()
                @Html.Partial("_MessagePartial")
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
            </div>

            <div id="formBody" class="form-horizontal">
                <div class="container-fluid">
                    <div class="form-container">
                        <div class="form-lead">@Html.Raw(LanguageResource.RequiredFill)</div>
                        <div class="form-body-container">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.BrandName, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.BrandName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.BrandName)
                                        @Html.HiddenFor(model => model.BrandId)
                                        @Html.ValidationMessageFor(model => model.BrandId)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.BrandAlias, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.BrandAlias, new { rows = 2, columns = 40, @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.BrandAlias)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.IsOnline, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.RadioButtonSwitchEnumFor(model => model.IsOnline)
                                        @Html.ValidationMessageFor(model => model.IsOnline)
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="panel-footer">
            <div class="row">
                <div class='btn-toolbar pull-right'>
                    <div class='btn-group'>
                        <input type="button" class="btn btn-default reset btnReset" data-mode="edit" data-form="frmEditBrand" data-id="@Model.BrandId" data-url='@Url.Action("Edit", "Brand")' value="@LanguageResource.Reset" />
                        <input type="button" class="btn btn-primary save edit editBrand" data-mode="edit" data-form="frmEditBrand" data-id="@Model.BrandId" data-url='@Url.Action("Edit", "Brand")' value="@LanguageResource.Save" />
                    </div>
                </div>
            </div>
        </div>

    </div>
}
