@{
    ViewBag.Title = LanguageResource.CreateSkill;
}

@using Eagle.Core.Settings
@model Eagle.Services.Dtos.Business.Personnel.SkillEntry

<div class="panel panel-default">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", id = "frmCreateSkill", name = "frmCreateSkill", }))
    {
        <div class="panel-heading text-bold">
            <div class='page-header margin-top-5 margin-bottom-0'>
                <div class='btn-toolbar pull-right'>
                    <div class='btn-group'>
                        <input type="button" class="btn btn-default reset btnReset" data-mode="create" data-form="frmCreateSkill" data-url='@Url.Action("CreateSkill", "Employee")' value="@LanguageResource.Reset" />
                        <input type="button" class="btn btn-primary save add create createSkill" data-mode="create" data-form="frmCreateSkill" data-url='@Url.Action("CreateSkill", "Employee")' value="@LanguageResource.Save" />
                    </div>
                </div>
                <h4><span class="glyphicon glyphicon-star"></span> @LanguageResource.CreateSkill</h4>
            </div>
        </div>

        <div class="panel-body padding-top-0">
            <div id="formMessage" class="form-message">
                @Html.AntiForgeryToken()
                @Html.Partial("_MessagePartial")
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
            </div>

            <div id="formBody" class="form-horizontal">
                <div class="form-container">
                    <div class="form-lead">@Html.Raw(LanguageResource.RequiredFill)</div>
                    <div class="form-body-container">
                        <div class="form-horizontal">

                            <div class="form-group">
                                @Html.RequiredLabelFor(model => model.SkillName, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.SkillName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.SkillName)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Description)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.RequiredLabelFor(model => model.IsActive, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownListFor(model => model.IsActive, null, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.IsActive)
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="panel-footer">
            <div class="row">
                <div class='btn-toolbar pull-right'>
                    <div class='btn-group'>
                        <input type="button" class="btn btn-default reset btnReset" data-mode="create" data-form="frmCreateSkill" data-url='@Url.Action("CreateSkill", "Employee")' value="@LanguageResource.Reset" />
                        <input type="button" class="btn btn-primary save add create createSkill" data-mode="create" data-form="frmCreateSkill" data-url='@Url.Action("CreateSkill", "Employee")' value="@LanguageResource.Save" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>