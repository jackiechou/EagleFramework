@model Eagle.Services.Dtos.Business.ProductAttributeOptionEntry

<div class="panel panel-default panel-table panel-option">
    <div class="panel-heading">
        <div class="row">
            <div class="col col-xs-6">
                <h6><span class="glyphicon glyphicon-option-vertical"></span> @LanguageResource.ProductAttributeOption</h6>
            </div>
            <div class="col col-xs-6 text-right">
                <button type="button" data-index="@Model.AttributeIndex" class="btn btn-sm btn-primary create-option add-option">@LanguageResource.AddNewItem</button>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <table id="Options" name="Options" data-array="Attributes[@Model.AttributeIndex].Options" class='table table-striped table-bordered table-hover table-sortable table-list option-table attribute-@Model.AttributeIndex-option-table'>
            <thead class="thead-default">
                <tr>
                    <th class="text-center bg-color-grey">@LanguageResource.OptionName</th>
                    <th class="text-center bg-color-grey">@LanguageResource.OptionValue</th>
                    <th class="text-center bg-color-grey">@LanguageResource.IsActive</th>
                    <th class="text-center bg-color-grey"><label class="glyphicon glyphicon-cog"></label></th>
                </tr>
            </thead>
            <tbody>
                <tr id="optionRow0" data-id="0" data-array="Attributes[@Model.AttributeIndex].Options">
                    <td data-name="OptionName"><input id="Attributes[@Model.AttributeIndex].Options[0].OptionName" name="Attributes[@Model.AttributeIndex].Options[0].OptionName" type="text" value="" placeholder='@LanguageResource.OptionName' class="form-control option-name" /></td>
                    <td data-name="OptionValue"><input id="Attributes[@Model.AttributeIndex].Options[0].OptionValue" name="Attributes[@Model.AttributeIndex].Options[0].OptionValue" type="text" pattern="/\D/g" value="" placeholder='@LanguageResource.OptionValue' class="form-control number option-value" /></td>
                    <td class="text-center" data-name="IsActive">
                        <input type="checkbox" id="Attributes[@Model.AttributeIndex].Options[0].IsActive" name="Attributes[@Model.AttributeIndex].Options[0].IsActive" checked="checked" value="1" class="form-control option-isactive ignored" />
                    </td>
                    <td class="text-center actions">
                        <button type="button" data-title="Edit" data-optionid="0" data-index="@Model.AttributeIndex" class='btn btn-success glyphicon glyphicon-pencil edit-option'></button>
                        <button type="button" data-title="Delete" data-optionid="0" data-index="@Model.AttributeIndex" class='btn btn-warning glyphicon glyphicon-trash remove-option'></button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        <div class="row">
            <button type="button" data-index="@Model.AttributeIndex" class="btn btn-sm btn-primary pull-right create-option add-option">@LanguageResource.AddNewItem</button>
        </div>
    </div>
</div>
