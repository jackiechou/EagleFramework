@using Eagle.Services.Skins
@{
    ViewBag.Title = Html.Raw(LanguageResource.ProductCategoryManagement);
    Layout = ThemeViewEngine.AdminFullMainLayout;
}

<div class="panel panel-primary">
    <div class="panel-heading text-bold">
        <div class='page-header margin-top-5 margin-bottom-0'>
            <div class='btn-toolbar pull-right'>
                <div class="btn-group" data-toggle="buttons">
                    <button type="button" class="btn btn-default back-form" onclick="location.href = '@Url.Action("Index", "ProductCategory")'">
                        <span class="glyphicon glyphicon-home"> @Html.Raw(LanguageResource.Create)</span>
                    </button>
                </div>
            </div>
            <h4><span class="glyphicon glyphicon-star"></span> @LanguageResource.ProductCategory</h4>
        </div>
    </div>

    <div class="panel-body">
        <div id="MainBody" class="container-fluid">
            <div class="row">
                <div class="col-md-4">
                    <div id="divList">
                        @Html.Partial("../Business/Ecommerce/ProductCategory/_TreeList")
                    </div>
                </div>
                <div class="col-md-8">
                    <div id="divEdit">
                        @Html.Partial("../Business/Ecommerce/ProductCategory/_Create")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
        <script type="text/javascript">
        //links
        window.CreateProductCategoryUrl = '@Url.Action("Create", "ProductCategory")';
        window.EditProductCategoryUrl = '@Url.Action("Edit", "ProductCategory")';
        window.DeleteProductCategoryUrl = '@Url.Action("Delete", "ProductCategory")';
        window.GetProductCategorySelectTreeUrl = '@Url.Action("GetProductCategorySelectTree", "ProductCategory")';
        </script>

        <!-- tree -->
        <link href="@Url.Content("~/Scripts/plugins/easyui/themes/bootstrap/easyui.css")" rel="stylesheet" />
        <link href="@Url.Content("~/Scripts/plugins/easyui/themes/icon.css")" rel="stylesheet" />
        <script src="@Url.Content("~/Scripts/plugins/easyui/jquery.easyui.min.js")"></script>
        <!-- Bootstrap-Iconpicker -->
        <link href="~/Scripts/plugins/bootstrap-plugins/bootstrap-iconpicker/css/bootstrap-iconpicker.min.css" rel="stylesheet" />
        <script src="~/Scripts/plugins/bootstrap-plugins/bootstrap-iconpicker/js/iconset/iconset-glyphicon.min.js"></script>
        <script src="~/Scripts/plugins/bootstrap-plugins/bootstrap-iconpicker/js/iconset/iconset-fontawesome-4.2.0.min.js"></script>
        <script src="~/Scripts/plugins/bootstrap-plugins/bootstrap-iconpicker/js/bootstrap-iconpicker.min.js"></script>
        <script src="~/Scripts/app/modules/product-category.js"></script>
    }
