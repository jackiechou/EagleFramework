@using Eagle.Core.HtmlHelper
@model Eagle.Services.Dtos.Business.ProductCategoryEditEntry
@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", id = "myform", name = "myform", autocomplete = "off", @class = "form-horizontal" }))
{
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-heading text-bold">
                <div class='page-header margin-top-5 margin-bottom-0'>
                    <div class='btn-toolbar pull-right'>
                        <div class='btn-group'>
                            <input type="button" class="btn btn-default reset btnReset" data-mode="edit" data-form="myform" data-url='@Url.Action("Edit", "ProductCategory")' value="@LanguageResource.Reset" />
                            <input type="button" class="btn btn-primary save edit editProductCategory" data-mode="edit" data-form="myform" data-url='@Url.Action("Edit", "ProductCategory")' value="@LanguageResource.Save" />
                        </div>
                    </div>
                    <h4><span class="glyphicon glyphicon-star"></span> @LanguageResource.EditProductCategory</h4>
                </div>
            </div>
            <div class="panel-body">
                <div id="formMessage" class="form-message">
                    @Html.AntiForgeryToken()
                    @Html.Partial("_MessagePartial")
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                </div>
                <div id="formBody">
                    <div class="container-fluid">
                        <div class="form-container">
                            <div class="form-lead">@Html.Raw(LanguageResource.RequiredFill)</div>
                            <div class="form-body-container">
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        @Html.RequiredLabelFor(model => model.CategoryName, new { @class = "control-label col-md-3" })
                                        <div class="col-md-9">
                                            @Html.TextBoxFor(model => model.CategoryName, null, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.CategoryName)

                                            @Html.HiddenFor(model => model.CategoryId)
                                            @Html.ValidationMessageFor(model => model.CategoryId)
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.CategoryCode, new { @class = "control-label col-md-3" })
                                        <div class="col-md-9">
                                            @Html.TextBoxFor(model => model.CategoryCode, null, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.CategoryCode)
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.RequiredLabelFor(model => model.ParentId, new { @class = "control-label col-md-3" })
                                        <div class="col-md-9">
                                            <input id="ParentId" name="ParentId" value="@Model.ParentId" class="easyui-combotree form-control cbxParentTree" data-url='@Url.Action("GetProductCategorySelectTree", "ProductCategory")' style="width: 100%;">
                                            @Html.ValidationMessageFor(model => model.ParentId)
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.CategoryLink, new { @class = "control-label col-md-3" })
                                        <div class="col-md-7">
                                            @Html.TextBoxFor(model => model.CategoryLink, null, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.CategoryLink)
                                        </div>
                                        <div class="col-md-1 no-padding-left no-padding-right">
                                            @Html.LabelFor(model => model.Icon)
                                        </div>
                                        <div class="col-md-1 no-padding-left no-padding-right">
                                            <button class="btn btn-default iconpicker" data-icon="glyphicon-picture" data-arrow-class="btn-success" role="iconpicker"></button>
                                            <input type="hidden" id="Icon" name="Icon" class="form-control" value="@Model.Icon">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.BriefDescription, new { @class = "control-label col-md-3" })
                                        <div class="col-md-9">
                                            @Html.TextAreaFor(model => model.BriefDescription, new { rows = 2, columns = 40, @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-3" })
                                        <div class="col-md-9">
                                            @Html.TextAreaFor(model => model.Description, new { rows = 2, columns = 40, @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Description)
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Status, new { @class = "control-label col-md-3" })
                                        <div class="col-md-9">
                                            @Html.RadioButtonSwitchEnumFor(model => model.Status)
                                            @Html.ValidationMessageFor(model => model.Status)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class='btn-toolbar pull-right'>
                        <div class='btn-group'>
                            <input type="button" class="btn btn-default reset btnReset" data-mode="edit" data-form="myform" data-url='@Url.Action("Edit", "ProductCategory")' value="@LanguageResource.Reset" />
                            <input type="button" class="btn btn-primary save edit editProductCategory" data-mode="edit" data-form="myform" data-url='@Url.Action("Edit", "ProductCategory")' value="@LanguageResource.Save" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
