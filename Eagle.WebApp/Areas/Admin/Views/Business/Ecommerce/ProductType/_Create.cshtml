@{
    ViewBag.Title = LanguageResource.CreateProductType;
}

@using Eagle.Core.Settings
@model Eagle.Services.Dtos.Business.ProductTypeEntry


@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", id = "frmCreateProductType", name = "frmCreateProductType", }))
{<div class="panel panel-default">
        <div class="panel-heading text-bold">
            <div class='page-header margin-top-5 margin-bottom-0'>
                <div class='btn-toolbar pull-right'>
                    <div class='btn-group'>
                        <input type="button" class="btn btn-default reset btnReset" data-mode="create" data-form="frmCreateProductType" data-url='@Url.Action("Create", "ProductType")' value="@LanguageResource.Reset" />
                        <input type="button" class="btn btn-primary save add create createProductType" data-mode="create" data-form="frmCreateProductType" data-url='@Url.Action("Create", "ProductType")' value="@LanguageResource.Save" />
                    </div>
                </div>
                <h4><span class="glyphicon glyphicon-star"></span> @LanguageResource.CreateProductType</h4>
            </div>
        </div>

        <div class="panel-body padding-top-0">
            <div id="formMessage" class="form-message">
                @Html.AntiForgeryToken()
                @Html.Partial("_MessagePartial")
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
            </div>

            <div id="formBody" class="form-horizontal">
                <div class="container-fluid">
                    <div class="form-container">
                        <div class="form-lead">@Html.Raw(LanguageResource.RequiredFill)</div>
                        <div class="form-body-container">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    @Html.RequiredLabelFor(model => model.CategoryId, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        <input id="CategoryId" name="CategoryId" value="0" class="easyui-combotree form-control cbxCategoryTree" data-url='@Url.Action("GetProductCategorySelectTree", "ProductCategory")' style="width: 100%;">
                                        @Html.ValidationMessageFor(model => model.CategoryId)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.TypeName, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.TypeName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.TypeName)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextAreaFor(model => model.Description, new { rows = 2, columns = 40, @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Description)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.IsActive, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.RadioButtonSwitchEnumFor(model => model.IsActive, ProductTypeStatus.Active)
                                        @Html.ValidationMessageFor(model => model.IsActive)
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="panel-footer">
            <div class="row">
                <div class='btn-toolbar pull-right'>
                    <div class='btn-group'>
                        <input type="button" class="btn btn-default reset btnReset" data-mode="create" data-form="frmCreateProductType" data-url='@Url.Action("Create", "ProductType")' value="@LanguageResource.Reset" />
                        <input type="button" class="btn btn-primary save add create createProductType" data-mode="create" data-form="frmCreateProductType" data-url='@Url.Action("Create", "ProductType")' value="@LanguageResource.Save" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}