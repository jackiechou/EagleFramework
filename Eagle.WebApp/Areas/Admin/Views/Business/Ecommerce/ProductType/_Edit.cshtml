@{
    ViewBag.Title = LanguageResource.EditProductType;
}

@using Eagle.Core.Settings
@model Eagle.Services.Dtos.Business.ProductTypeEditEntry


@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", id = "frmEditProductType", name = "frmEditProductType", autocomplete = "off", @class = "form-horizontal" }))
{
    <div class="panel panel-default">
        <div class="panel-heading text-bold">
            <div class='page-header margin-top-5 margin-bottom-0'>
                <div class='btn-toolbar pull-right'>
                    <div class='btn-group'>
                        <input type="button" class="btn btn-default reset btnReset" data-mode="edit" data-form="frmEditProductType" data-id="@Model.TypeId" data-url='@Url.Action("Edit", "ProductType")' value="@LanguageResource.Reset" />
                        <input type="button" class="btn btn-primary edit editProductType" data-mode="edit" data-form="frmEditProductType" data-url='@Url.Action("Edit", "ProductType")' value="@LanguageResource.Save" />
                    </div>
                </div>
                <h4><span class="glyphicon glyphicon-star"></span> @LanguageResource.EditProductType</h4>
            </div>
        </div>

        <div class="panel-body padding-top-0">
            <div id="formMessage" class="form-message">
                @Html.Partial("_MessagePartial")
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            </div>

            <div id="formBody" class="form-horizontal">
                <div class="container-fluid">
                    <div class="form-container">
                        <div class="form-lead">@Html.Raw(LanguageResource.RequiredFill)</div>
                        <div class="form-body-container">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    @Html.RequiredLabelFor(model => model.CategoryId, new {@class = "control-label col-md-2"})
                                    <div class="col-md-10">
                                        <input id="CategoryId" name="CategoryId" value="@Model.CategoryId" class="easyui-combotree form-control cbxCategoryTree" data-url='@Url.Action("GetProductCategorySelectTree", "ProductCategory")' style="width: 100%;">
                                        @Html.ValidationMessageFor(model => model.CategoryId)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.TypeName, new {@class = "control-label col-md-2"})
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.TypeName, new {@class = "form-control", required = "required"})
                                        @Html.ValidationMessageFor(model => model.TypeName)

                                        @Html.HiddenFor(model => model.TypeId)
                                        @Html.ValidationMessageFor(model => model.TypeId)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Description, new {@class = "control-label col-md-2"})
                                    <div class="col-md-10">
                                        @Html.TextAreaFor(model => model.Description, new {rows = 2, columns = 40, @class = "form-control"})
                                        @Html.ValidationMessageFor(model => model.Description)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.IsActive, new {@class = "control-label col-md-2"})
                                    <div class="col-md-10">
                                        <div class="checkbox">
                                            @Html.RadioButtonSwitchEnumFor(model => model.IsActive)
                                            @Html.ValidationMessageFor(model => model.IsActive, "", new {@class = "text-danger"})
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="panel-footer">
            <div class="row">
                <div class='btn-toolbar pull-right'>
                    <div class='btn-group'>
                        <input type="button" class="btn btn-default reset btnReset" data-mode="edit" data-form="frmEditProductType" data-id="@Model.TypeId" data-url='@Url.Action("Edit", "ProductType")' value="@LanguageResource.Reset" />
                        <input type="button" class="btn btn-primary edit editProductType" data-mode="edit" data-form="frmEditProductType" data-id="@Model.TypeId" data-url='@Url.Action("Edit", "ProductType")' value="@LanguageResource.Save" />
                    </div>
                </div>
            </div>
        </div>

    </div>
}