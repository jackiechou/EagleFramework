@{
    ViewBag.Title = LanguageResource.EditShippingCarrier;
}

@using Eagle.Core.Settings
@model Eagle.Services.Dtos.Business.ShippingCarrierEditEntry

<div class="panel panel-default">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", id = "frmEditShippingCarrier", name = "frmEditShippingCarrier", autocomplete = "off", @class = "form-horizontal" }))
    {
        <div class="panel-heading text-bold">
            <div class='page-header margin-top-5 margin-bottom-0'>
                <div class='btn-toolbar pull-right'>
                    <div class='btn-group'>
                        <input type="button" class="btn btn-default reset btnReset" data-mode="edit" data-form="frmEditShippingCarrier" data-id="@Model.ShippingCarrierId" data-url='@Url.Action("Edit", "ShippingCarrier")' value="@LanguageResource.Reset" />
                        <input type="button" class="btn btn-primary edit editShippingCarrier" data-mode="edit" data-form="frmEditShippingCarrier" data-url='@Url.Action("Edit", "ShippingCarrier")' value="@LanguageResource.Save" />
                    </div>
                </div>
                <h4><span class="glyphicon glyphicon-star"></span> @LanguageResource.EditShippingCarrier</h4>
            </div>
        </div>

        <div class="panel-body padding-top-0">
            <div id="formMessage" class="form-message">
                @Html.Partial("_MessagePartial")
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            </div>

            <div id="formBody" class="form-horizontal">
                <div class="form-container">
                    <div class="form-lead">@Html.Raw(LanguageResource.RequiredFill)</div>
                    <div class="form-body-container">
                        <div class="form-horizontal">
                            <div class="form-group">
                                @Html.RequiredLabelFor(model => model.ShippingCarrierName, new {@class = "control-label col-md-2"})
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.ShippingCarrierName, new {@class = "form-control", required = "required"})
                                    @Html.ValidationMessageFor(model => model.ShippingCarrierName)

                                    @Html.HiddenFor(model => model.ShippingCarrierId)
                                    @Html.ValidationMessageFor(model => model.ShippingCarrierId)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Phone, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Phone)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Address, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextAreaFor(model => model.Address, new { rows = 2, columns = 40, maxlength = 150, @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Address)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.IsActive, new {@class = "control-label col-md-2"})
                                <div class="col-md-10">
                                    <div class="checkbox-slider--a">
                                        <label>
                                            @{
                                                if (Model.IsActive)
                                                {
                                                    <input type="checkbox" id="IsActive" name="IsActive" checked="checked" value="true"><span></span>
                                                }
                                                else
                                                {
                                                    <input type="checkbox" id="IsActive" name="IsActive" value="false"><span></span>
                                                }
                                            }
                                        </label>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.IsActive)
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="panel-footer">
            <div class="row">
                <div class='btn-toolbar pull-right'>
                    <div class='btn-group'>
                        <input type="button" class="btn btn-default reset btnReset" data-mode="edit" data-form="frmEditShippingCarrier" data-id="@Model.ShippingCarrierId" data-url='@Url.Action("Edit", "ShippingCarrier")' value="@LanguageResource.Reset" />
                        <input type="button" class="btn btn-primary edit editShippingCarrier" data-mode="edit" data-form="frmEditShippingCarrier" data-id="@Model.ShippingCarrierId" data-url='@Url.Action("Edit", "ShippingCarrier")' value="@LanguageResource.Save" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>