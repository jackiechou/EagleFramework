@using Eagle.Services.Skins
@{
    ViewBag.Title = Html.Raw(LanguageResource.CurrencyManagement);
    Layout = ThemeViewEngine.AdminFullMainLayout;
}

<div id="MainContainer" class="box-container">
    <div class="body-container">
        <div id="bodyContent">
            <div id="MainBody" class="container-fluid">
                <div id="divEdit">
                    @Html.Partial("../Business/Ecommerce/Transaction/Currency/_Create")
                </div>
                <div id="divList">
                    @Html.Action("LoadSearchForm", "Currency")
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        window.CurrencySearchUrl = '@Url.Action("Search", "Currency")';
    </script>
    <script type="text/javascript" src="~/Scripts/app/modules/currency.js"></script>
}