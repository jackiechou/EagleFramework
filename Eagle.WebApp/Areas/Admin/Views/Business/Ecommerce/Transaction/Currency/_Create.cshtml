@{
    ViewBag.Title = LanguageResource.CreateCurrency;
}

@using Eagle.Core.Settings
@model Eagle.Services.Dtos.Business.CurrencyEntry

<div class="panel panel-default">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", id = "frmCreateCurrency", name = "frmCreateCurrency", }))
    {
        <div class="panel-heading text-bold">
            <div class='page-header margin-top-5 margin-bottom-0'>
                <div class='btn-toolbar pull-right'>
                    <div class='btn-group'>
                        <input type="button" class="btn btn-default reset btnReset" data-mode="create" data-form="frmCreateCurrency" data-url='@Url.Action("Create", "Currency")' value="@LanguageResource.Reset" />
                        <input type="button" class="btn btn-primary save add create createCurrency" data-mode="create" data-form="frmCreateCurrency" data-url='@Url.Action("Create", "Currency")' value="@LanguageResource.Save" />
                    </div>
                </div>
                <h4><span class="glyphicon glyphicon-star"></span> @LanguageResource.CreateCurrency</h4>
            </div>
        </div>

        <div class="panel-body padding-top-0">
            <div id="formMessage" class="form-message">
                @Html.AntiForgeryToken()
                @Html.Partial("_MessagePartial")
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
            </div>

            <div id="formBody" class="form-horizontal">
                <div class="form-container">
                    <div class="form-lead">@Html.Raw(LanguageResource.RequiredFill)</div>
                    <div class="form-body-container">
                        <div class="form-horizontal">

                            <div class="form-group">
                                @Html.RequiredLabelFor(model => model.CurrencyName, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.CurrencyName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.CurrencyName)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.RequiredLabelFor(model => model.CurrencyCode, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.CurrencyCode, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.CurrencyCode)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.RequiredLabelFor(model => model.IsActive, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.RadioButtonSwitchEnumFor(model => model.IsActive, CurrencyStatus.Active)
                                    @Html.ValidationMessageFor(model => model.IsActive)
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="panel-footer">
            <div class="row">
                <div class='btn-toolbar pull-right'>
                    <div class='btn-group'>
                        <input type="button" class="btn btn-default reset btnReset" data-mode="create" data-form="frmCreateCurrency" data-url='@Url.Action("Create", "Currency")' value="@LanguageResource.Reset" />
                        <input type="button" class="btn btn-primary save add create createCurrency" data-mode="create" data-form="frmCreateCurrency" data-url='@Url.Action("Create", "Currency")' value="@LanguageResource.Save" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>