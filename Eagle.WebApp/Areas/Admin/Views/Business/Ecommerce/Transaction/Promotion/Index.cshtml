@using Eagle.Services.Skins
@{
    ViewBag.Title = Html.Raw(LanguageResource.Promotion);
    Layout = ThemeViewEngine.AdminFullMainLayout;
}

<div id="MainContainer" class="box-container">
    <div class="body-container">
        <div id="bodyContent">
            <div id="MainBody" class="container-fluid">
                <div id="divEdit">
                    @Html.Action("Create", "Promotion")
                </div>
                <div id="divList">
                    @Html.Action("LoadSearchForm", "Promotion")
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        window.PromotionSearchUrl = '@Url.Action("Search", "Promotion")';
    </script>
    <script src="~/Scripts/autoNumeric.js"></script>
    <script type="text/javascript" src="~/Scripts/app/modules/promotion.js"></script>
}