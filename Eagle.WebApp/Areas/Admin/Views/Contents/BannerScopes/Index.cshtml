@using Eagle.Services.Skins
@{
    ViewBag.Title = Html.Raw(LanguageResource.BannerScopeManagement);
    Layout = ThemeViewEngine.AdminFullMainLayout;
}

<div id="MainContainer" class="box-container">
    <div class="body-container">
        <div id="bodyContent">
            <div id="MainBody" class="container-fluid">
                <div id="divEdit">
                    @Html.Action("Create", "BannerScope")
                </div>
                <div id="divList">
                    @Html.Action("List", "BannerScope")
                </div>
            </div>
        </div>
    </div>
</div>

<div id="FooterContainer"><div class="bottom-toolbar"></div></div>

@section Scripts{
    <script Scope="text/javascript">
        window.BannerScopeListUrl = '@Url.Action("List", "BannerScope")';
    </script>
    <script type="text/javascript" src="~/Scripts/app/modules/banner-scope.js"></script>
}