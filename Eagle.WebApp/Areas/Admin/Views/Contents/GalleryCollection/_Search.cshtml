@model Eagle.Services.Dtos.Contents.Galleries.GalleryCollectionSearchEntry
<div class="panel panel-primary search-panel">
    <div class="panel-heading text-bold">
        <div class="row">
            <div class="col-md-10">
                <h5>@Html.Raw(LanguageResource.List)</h5>
            </div>
            <div class="col-md-2 text-right">
                <div class="btn-group" data-toggle="buttons">
                    <button type="button" class="btn btn-default back-form" onclick="location.href = '@Url.Action("Index", "GalleryCollection")'">
                        <span class="glyphicon glyphicon-home"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="panel-body">

        @using (Html.BeginForm(null, null, FormMethod.Get, new { id = "frmSearch", name = "frmSearch", @class = "form-horizontal" }))
        {
            @Html.ValidationSummary("", new { @class = "alert alert-danger" })
            <div class="row margin-bottom-15">
                <div class="input-group">
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-cog"> @LanguageResource.Search</span>
                    </span>
                    <span class="input-group-addon">
                        @Html.TextBoxFor(model => model.SearchCollectionName, new { @class = "form-control", placeholder = @LanguageResource.CollectionName })
                    </span>
                    <span class="input-group-addon">
                        <select id="SelectTopic" name="SelectTopic"></select>
                        <input type="hidden" id="SearchTopicId" name="SearchTopicId" />
                        <input type="hidden" id="SearchTopicName" name="SearchTopicName" />
                    </span>
                    <span class="input-group-addon">
                        @Html.EnumDropDownListFor(model => model.SearchStatus, LanguageResource.PleaseSelect, new { @class = "form-control" })
                    </span>
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-refresh reset" role="button"  data-form="frmSearch" data-mode="search"></span>
                    </span>
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-search search" role="button" data-form="frmSearch" data-mode="search"></span>
                    </span>
                </div>
            </div>
            <div id="search-result" class="row">
                @Html.Action("Search", "GalleryCollection")
            </div>
        }
    </div>
</div>
