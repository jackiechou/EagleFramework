@{
    ViewBag.Title = LanguageResource.EditServiceBooking;
}
@model Eagle.Services.Dtos.Services.Booking.ServiceBookingOrderDetailEditEntry

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", id = "frmEditServiceBooking", name = "frmEditServiceBooking", autocomplete = "off", @class = "form-horizontal" }))
{
    <div class="panel panel-default">
        <div class="panel-heading text-bold">
            <div class='page-header margin-top-5 margin-bottom-0'>
                <div class='btn-toolbar pull-right'>
                    <div class='btn-group'>
                        <input type="button" class="btn btn-default reset btnReset" data-mode="edit" data-form="frmEditServiceBooking" data-id="@Model.BookingId" data-url='@Url.Action("Edit", "ServiceBookingOrderDetail")' value="@LanguageResource.Reset" />
                        <input type="button" class="btn btn-primary edit editServiceBooking" data-mode="edit" data-form="frmEditServiceBooking" data-url='@Url.Action("Edit", "ServiceBookingOrderDetail")' value="@LanguageResource.Save" />
                    </div>
                </div>
                <h4><span class="glyphicon glyphicon-star"></span> @LanguageResource.EditServiceBooking</h4>
            </div>
        </div>

        <div class="panel-body padding-top-0">
            <div id="formMessage" class="form-message">
                @Html.Partial("_MessagePartial")
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            </div>

            <div id="formBody" class="form-horizontal">
                <div class="container-fluid">
                    <div class="form-container">
                        <div class="form-lead">@Html.Raw(LanguageResource.RequiredFill)</div>
                        <div class="form-body-container">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    @Html.RequiredLabelFor(model => model.PackageId, new {@class = "control-label col-md-1"})
                                    <div class="col-md-5">
                                        @Html.DropDownListFor(model => model.PackageId, null, new {@class = "form-control"})
                                        @Html.ValidationMessageFor(model => model.PackageId)

                                        @Html.HiddenFor(model => model.BookingId)
                                        @Html.ValidationMessageFor(model => model.BookingId)
                                    </div>
                                    @Html.RequiredLabelFor(model => model.CustomerId, new { @class = "control-label col-md-1" })
                                    <div class="col-md-5">
                                        <select id="cbxCustomer" name="cbxCustomer" data-id="@Model.CustomerId" data-text="@Model.CustomerName" data-url='@Url.Action("PoplulateCustomerAutoComplete", "ServiceBookingOrderDetail")' data-placeholder="@LanguageResource.PleaseSelectCustomer" class="form-control"></select>
                                        @Html.HiddenFor(model => model.CustomerId)
                                        @Html.HiddenFor(model => model.CustomerName)
                                        @Html.ValidationMessageFor(model => model.CustomerId)
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.RequiredLabelFor(model => model.EmployeeId, new { @class = "control-label col-md-1" })
                                    <div class="col-md-5">
                                        <select id="cbxEmployee" name="cbxEmployee" data-id="@Model.EmployeeId" data-url='@Url.Action("PoplulateEmployeeSelectList", "ServiceBookingOrderDetail")' class="form-control"></select>
                                        @Html.HiddenFor(model => model.EmployeeId)
                                        @Html.HiddenFor(model => model.EmployeeName)
                                        @Html.ValidationMessageFor(model => model.EmployeeId)
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.RequiredLabelFor(model => model.StartDate, new {@class = "control-label col-md-1"})
                                    <div class="col-md-5">
                                        @Html.DateTimePickerFor(model => model.StartDate)
                                        @Html.ValidationMessageFor(model => model.StartDate)
                                    </div>
                                    @Html.RequiredLabelFor(model => model.FromPeriod, new { @class = "control-label col-md-1" })
                                    <div class="col-md-2">
                                        @Html.DropDownListFor(model => model.FromPeriod, null, new { @class = "form-control", placeholder = LanguageResource.From })
                                        @Html.ValidationMessageFor(model => model.FromPeriod)
                                    </div>
                                    @Html.LabelFor(model => model.ToPeriod, new { @class = "control-label col-md-1" })
                                    <div class="col-md-2">
                                        @Html.DropDownListFor(model => model.ToPeriod, null, new { @class = "form-control", placeholder = LanguageResource.To })
                                        @Html.ValidationMessageFor(model => model.ToPeriod)
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Comment, new { @class = "control-label col-md-1" })
                                    <div class="col-md-5">
                                        @Html.TextAreaFor(model => model.Comment, new {rows = 2, columns = 40, @class = "form-control"})
                                        @Html.ValidationMessageFor(model => model.Comment)
                                    </div>
                                    @Html.RequiredLabelFor(model => model.Status, new { @class = "control-label col-md-2" })
                                    <div class="col-md-5">
                                        @Html.RadioButtonSwitchEnumFor(model => model.Status)
                                        @Html.ValidationMessageFor(model => model.Status)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="panel-footer">
            <div class="row">
                <div class='btn-toolbar pull-right'>
                    <div class='btn-group'>
                        <input type="button" class="btn btn-default reset btnReset" data-mode="edit" data-form="frmEditServiceBooking" data-id="@Model.BookingId" data-url='@Url.Action("Edit", "ServiceBookingOrderDetail")' value="@LanguageResource.Reset" />
                        <input type="button" class="btn btn-primary edit editServiceBooking" data-mode="edit" data-form="frmEditServiceBooking" data-id="@Model.BookingId" data-url='@Url.Action("Edit", "ServiceBookingOrderDetail")' value="@LanguageResource.Save" />
                    </div>
                </div>
            </div>
        </div>

    </div>
}