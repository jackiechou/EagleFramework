@{
    ViewBag.Title = LanguageResource.EditServicePeriod;
}

@model Eagle.Services.Dtos.Services.Booking.ServicePeriodEditEntry

<div class="panel panel-default">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", id = "frmEditServicePeriod", name = "frmEditServicePeriod", autocomplete = "off", @class = "form-horizontal" }))
    {
        <div class="panel-heading text-bold">
            <div class='page-header margin-top-5 margin-bottom-0'>
                <div class='btn-toolbar pull-right'>
                    <div class='btn-group'>
                        <input type="button" class="btn btn-default reset btnReset" data-mode="edit" data-form="frmEditServicePeriod" data-id="@Model.PeriodId" data-url='@Url.Action("Edit", "ServicePeriod")' value="@LanguageResource.Reset" />
                        <input type="button" class="btn btn-primary edit editServicePeriod" data-mode="edit" data-form="frmEditServicePeriod" data-url='@Url.Action("Edit", "ServicePeriod")' value="@LanguageResource.Save" />
                    </div>
                </div>
                <h4><span class="glyphicon glyphicon-star"></span> @LanguageResource.EditServicePeriod</h4>
            </div>
        </div>

        <div class="panel-body padding-top-0">
            <div id="formMessage" class="form-message">
                @Html.Partial("_MessagePartial")
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            </div>

            <div id="formBody" class="form-horizontal">
                <div class="form-container">
                    <div class="form-lead">@Html.Raw(LanguageResource.RequiredFill)</div>
                    <div class="form-body-container">
                        <div class="form-horizontal">
                            <div class="form-group">
                                @Html.RequiredLabelFor(model => model.PeriodName, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.PeriodName, new { @class = "form-control", required = "required", placeholder = LanguageResource.PeriodName })
                                    @Html.ValidationMessageFor(model => model.PeriodName)

                                    @Html.HiddenFor(model => model.PeriodId)
                                    @Html.ValidationMessageFor(model => model.PeriodId)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.PeriodValue, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.PeriodValue, new { @class = "form-control number", placeholder = LanguageResource.PeriodValue })
                                    @Html.ValidationMessageFor(model => model.PeriodValue)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.RequiredLabelFor(model => model.Status, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <div class="checkbox-slider--a">
                                        <label>
                                            @{
                                                if (Model.Status)
                                                {
                                                    <input type="checkbox" id="Status" name="Status" checked="checked" value="true"><span></span>
                                                }
                                                else
                                                {
                                                    <input type="checkbox" id="Status" name="Status" value="false"><span></span>
                                                }
                                            }
                                        </label>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Status)
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="panel-footer">
            <div class="row">
                <div class='btn-toolbar pull-right'>
                    <div class='btn-group'>
                        <input type="button" class="btn btn-default reset btnReset" data-mode="edit" data-form="frmEditServicePeriod" data-id="@Model.PeriodId" data-url='@Url.Action("Edit", "ServicePeriod")' value="@LanguageResource.Reset" />
                        <input type="button" class="btn btn-primary edit editServicePeriod" data-mode="edit" data-form="frmEditServicePeriod" data-id="@Model.PeriodId" data-url='@Url.Action("Edit", "ServicePeriod")' value="@LanguageResource.Save" />
                    </div>
                </div>
            </div>
        </div>
     }
</div>