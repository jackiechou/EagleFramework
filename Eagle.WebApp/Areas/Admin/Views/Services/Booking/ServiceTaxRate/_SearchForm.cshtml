@model Eagle.Services.Dtos.Services.Booking.ServiceTaxRateSearchEntry

<div class="panel panel-default search-panel">
    <div class="panel-heading">
        <h5>@Html.Raw(LanguageResource.Search)</h5>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm(null, null, FormMethod.Get, new { id = "frmSearch", name = "frmSearch", @class = "form-horizontal" }))
        {
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-1 padding-left-right-5 padding-right-5">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-cog"></span> @LanguageResource.Search
                            </span>
                        </div>
                    </div>
                    <div class="col-md-4 padding-left-5 padding-right-5">
                        @Html.DropDownListFor(model => model.IsActive, null,  string.Format("--- {0} ---", LanguageResource.Select), new { @class = "form-control" })
                    </div>
                    <div class="col-md-7 padding-left-5 padding-right-5">
                        <div class="input-group">
                            <div class="input-group-button">
                                <button type="button" class="btn btn-primary search" data-form="frmSearch" data-mode="search">
                                    <span class="glyphicon glyphicon-search" role="button"></span> @LanguageResource.Search
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="panel-footer">
        <div id="search-result" class="row">
            @{
                Html.RenderAction("Search", "ServiceTaxRate");
            }
        </div>
    </div>
</div>