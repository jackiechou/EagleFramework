@using Eagle.Services.Skins
@{
    ViewBag.Title = Html.Raw(LanguageResource.EventType);
    Layout = ThemeViewEngine.AdminFullMainLayout;
}

<div class="panel panel-primary">
    <div class="panel-heading text-bold">
        <div class='page-header margin-top-5 margin-bottom-0'>
            <div class='btn-toolbar pull-right'>
                <div class="btn-group" data-toggle="buttons">
                    <button type="button" class="btn btn-default back-form" onclick="location.href = '@Url.Action("Index", "EventType")'">
                        <span class="glyphicon glyphicon-home"></span>
                    </button>
                </div>
            </div>
            <h4><span class="glyphicon glyphicon-star"></span> @LanguageResource.EventType</h4>
        </div>
    </div>

    <div class="panel-body">
        <div id="MainBody" class="container-fluid">
            <div class="row">
                <div class="col-md-4">
                    <div id="divList">
                        @Html.Partial("../Services/Events/EventType/_TreeList")
                    </div>
                </div>
                <div class="col-md-8">
                    <div id="divEdit">
                        @Html.Action("Create", "EventType")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script type="text/javascript">
        //links
        window.CreateEventTypeUrl = '@Url.Action("Create", "EventType")';
        window.EditEventTypeUrl = '@Url.Action("Edit", "EventType")';
        window.DeleteEventTypeUrl = '@Url.Action("Delete", "EventType")';
        window.GetEventTypeSelectTreeUrl = '@Url.Action("GetEventTypeSelectTree", "EventType")';
    </script>

    <!-- tree -->
    <link href="@Url.Content("~/Scripts/plugins/easyui/themes/bootstrap/easyui.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Scripts/plugins/easyui/themes/icon.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/plugins/easyui/jquery.easyui.min.js")"></script>
    <script src="~/Scripts/app/modules/event-type.js"></script>
}
