@{
    ViewBag.Title = LanguageResource.CreateMessageType;
}

@using Eagle.Core.Settings
@model Eagle.Services.Dtos.Services.Message.MessageTypeEntry


@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", id = "frmCreateMessageType", name = "frmCreateMessageType", }))
{<div class="panel panel-default">
        <div class="panel-heading text-bold">
            <div class='page-header margin-top-5 margin-bottom-0'>
                <div class='btn-toolbar pull-right'>
                    <div class='btn-group'>
                        <input type="button" class="btn btn-default reset btnReset" data-mode="create" data-form="frmCreateMessageType" data-url='@Url.Action("Create", "MessageType")' value="@LanguageResource.Reset" />
                        <input type="button" class="btn btn-primary save add create createMessageType" data-mode="create" data-form="frmCreateMessageType" data-url='@Url.Action("Create", "MessageType")' value="@LanguageResource.Save" />
                    </div>
                </div>
                <h4><span class="glyphicon glyphicon-star"></span> @LanguageResource.CreateMessageType</h4>
            </div>
        </div>

        <div class="panel-body padding-top-0">
            <div id="formMessage" class="form-message">
                @Html.AntiForgeryToken()
                @Html.Partial("_MessagePartial")
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
            </div>

            <div id="formBody" class="form-horizontal">
                <div class="container-fluid">
                    <div class="form-container">
                        <div class="form-lead">@Html.Raw(LanguageResource.RequiredFill)</div>
                        <div class="form-body-container">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    @Html.RequiredLabelFor(model => model.MessageTypeName, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.MessageTypeName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.MessageTypeName)
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextAreaFor(model => model.Description, new { rows = 2, columns = 40, @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Description)
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.RequiredLabelFor(model => model.Status, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        <div class="checkbox-slider--a">
                                            <label>
                                                <input type="checkbox" id="Status" name="Status" checked="checked" value="true"><span></span>
                                            </label>
                                        </div>
                                        @Html.ValidationMessageFor(model => model.Status)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="panel-footer">
            <div class="row">
                <div class='btn-toolbar pull-right'>
                    <div class='btn-group'>
                        <input type="button" class="btn btn-default reset btnReset" data-mode="create" data-form="frmCreateMessageType" data-url='@Url.Action("Create", "MessageType")' value="@LanguageResource.Reset" />
                        <input type="button" class="btn btn-primary save add create createMessageType" data-mode="create" data-form="frmCreateMessageType" data-url='@Url.Action("Create", "MessageType")' value="@LanguageResource.Save" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}