@using Eagle.Services.Skins
@{
    ViewBag.Title = Html.Raw(LanguageResource.NotificationType);
    Layout = ThemeViewEngine.AdminFullMainLayout;
}


<div class="panel panel-primary">
    <div class="panel-heading text-bold">
        <div class='page-header margin-top-5 margin-bottom-0'>
            <div class='btn-toolbar pull-right'>
                <div class="btn-group" data-toggle="buttons">
                    <button type="button" class="btn btn-default back-form" onclick="location.href = '@Url.Action("Index", "NotificationType")'">
                        <span class="glyphicon glyphicon-home"></span>
                    </button>
                </div>
            </div>
            <h4><span class="glyphicon glyphicon-star"></span> @LanguageResource.NotificationType</h4>
        </div>
    </div>

    <div class="panel-body">
        <div id="MainBody" class="container-fluid">
            <div class="row">
                <div class="col-md-4">
                    <div id="divList">
                        @Html.Partial("../Services/Message/NotificationType/_TreeList")
                    </div>
                </div>
                <div class="col-md-8">
                    <div id="divEdit">
                        @Html.Action("Create", "NotificationType")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        //links
        window.CreateNotificationTypeUrl = '@Url.Action("Create", "NotificationType")';
        window.EditNotificationTypeUrl = '@Url.Action("Edit", "NotificationType")';
        window.DeleteNotificationTypeUrl = '@Url.Action("Delete", "NotificationType")';
        window.GetNotificationTypeTreeGridUrl = '@Url.Action("GetNotificationTypeTreeGrid", "NotificationType")';
        window.GetNotificationTypeSelectTreeUrl = '@Url.Action("GetNotificationTypeSelectTree", "NotificationType")';
    </script>

    <!-- tree -->
    <link href="@Url.Content("~/Scripts/plugins/easyui/themes/bootstrap/easyui.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Scripts/plugins/easyui/themes/icon.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/plugins/easyui/jquery.easyui.min.js")"></script>

    <!-- jstree -->
    <link href="~/Scripts/plugins/jstree/themes/proton/style.min.css" rel="stylesheet" />
    <script src="~/Scripts/plugins/jstree/jstree.min.js"></script>
    <script src="~/Scripts/plugins/jstree/jstreegrid.js"></script>

    <link href="~/Scripts/plugins/multiple-select/multiple-select.css" rel="stylesheet" />
    <script src="~/Scripts/plugins/multiple-select/multiple-select.js"></script>
    <script src="~/Scripts/app/modules/notification-type.js"></script>
}
