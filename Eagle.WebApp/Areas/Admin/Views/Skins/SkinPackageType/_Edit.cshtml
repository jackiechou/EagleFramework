@{
    ViewBag.Title = LanguageResource.EditSkinPackageType;
}

@using Eagle.Core.Settings
@model Eagle.Services.Dtos.Skins.SkinPackageTypeEditEntry


@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", id = "frmEditSkinPackageType", name = "frmEditSkinPackageType", autocomplete = "off", @class = "form-horizontal" }))
{
    <div class="panel panel-default">
        <div class="panel-heading text-bold">
            <div class='page-header margin-top-5 margin-bottom-0'>
                <div class='btn-toolbar pull-right'>
                    <div class='btn-group'>
                        <input type="button" class="btn btn-default reset btnReset" data-mode="edit" data-form="frmEditSkinPackageType" data-id="@Model.TypeId" data-url='@Url.Action("Edit", "SkinPackageType")' value="@LanguageResource.Reset" />
                        <input type="button" class="btn btn-primary edit editSkinPackageType" data-mode="edit" data-form="frmEditSkinPackageType" data-url='@Url.Action("Edit", "SkinPackageType")' value="@LanguageResource.Save" />
                    </div>
                </div>
                <h4><span class="glyphicon glyphicon-star"></span> @LanguageResource.EditSkinPackageType</h4>
            </div>
        </div>

        <div class="panel-body padding-top-0">
            <div id="formMessage" class="form-message">
                @Html.Partial("_MessagePartial")
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            </div>

            <div id="formBody" class="form-horizontal">
                <div class="container-fluid">
                    <div class="form-container">
                        <div class="form-lead">@Html.Raw(LanguageResource.RequiredFill)</div>
                        <div class="form-body-container">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    @Html.RequiredLabelFor(model => model.TypeName, new {@class = "control-label col-md-2"})
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.TypeName, new {@class = "form-control"})
                                        @Html.ValidationMessageFor(model => model.TypeName)

                                        @Html.HiddenFor(model => model.TypeId)
                                        @Html.ValidationMessageFor(model => model.TypeId)
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.RequiredLabelFor(model => model.IsActive, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        <div class="checkbox-slider--a">
                                            <label>
                                                @{
                                                    if (@Model.IsActive)
                                                    {
                                                        <input type="checkbox" id="IsActive" name="IsActive" checked="checked" value="true"><span></span>
                                                    }
                                                    else
                                                    {
                                                        <input type="checkbox" id="IsActive" name="IsActive" value="false"><span></span>
                                                    }
                                                }
                                            </label>
                                        </div>

                                        @Html.ValidationMessageFor(model => model.IsActive)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="panel-footer">
            <div class="row">
                <div class='btn-toolbar pull-right'>
                    <div class='btn-group'>
                        <input type="button" class="btn btn-default reset btnReset" data-mode="edit" data-form="frmEditSkinPackageType" data-id="@Model.TypeId" data-url='@Url.Action("Edit", "SkinPackageType")' value="@LanguageResource.Reset" />
                        <input type="button" class="btn btn-primary edit editSkinPackageType" data-mode="edit" data-form="frmEditSkinPackageType" data-id="@Model.TypeId" data-url='@Url.Action("Edit", "SkinPackageType")' value="@LanguageResource.Save" />
                    </div>
                </div>
            </div>
        </div>

    </div>
}