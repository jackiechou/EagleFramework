@model Eagle.Services.Dtos.SystemManagement.Settings.PaypalSettingEditEntry

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmPayPal" + Model.PaypalSetting.Mode, name = "frmPayPal" + Model.PaypalSetting.Mode, @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class='btn-toolbar pull-right'>
                <div class='btn-group'>
                    <input type="button" class="btn btn-default resetPayPal" data-mode="@Model.PaypalSetting.Mode" data-form='@string.Format("frmPayPal{0}",Model.PaypalSetting.Mode)' data-url='@Url.Action("EditPaypalSetting", "Application")' value="@LanguageResource.Reset" />
                    <input type="button" class="btn btn-primary editPayPal" data-mode="@Model.PaypalSetting.Mode" data-form='@string.Format("frmPayPal{0}",Model.PaypalSetting.Mode)' data-url='@Url.Action("EditPaypalSetting", "Application")' value="@LanguageResource.Save" />
                </div>
                @*<div class="btn-group" data-toggle="buttons">
                        <label class="btn btn-primary active">
                            <input type="radio" name="PaypalSetting.Mode[]" checked="checked" value="sandbox"> @LanguageResource.Sandbox
                        </label>
                        <label class="btn btn-primary">
                            <input type="radio" name="PaypalSetting.Mode[]" value="live"> @LanguageResource.Live
                        </label>
                    </div>*@
            </div>
            <h6><strong>@LanguageResource.PayPal</strong></h6>
        </div>
        <div class="panel-body">
            <div id="formMessage" class="form-message">
                @Html.AntiForgeryToken()
                <div id="@string.Format("alertMessageBox-frmPayPal{0}", Model.PaypalSetting.Mode)" aria-hidden="true" aria-labelledby="alertMessage" role="dialog" class="modal hide fade">
                    <div class="modal-body">
                        <div id="alertMessage">
                            @if (ViewBag.DisplayErrorMessage == true)
                            {
                                <div class="@ViewBag.CssClass">
                                    <a href="#" class="close" data-dismiss="alert">&times;</a>
                                    <strong>@ViewBag.SortMessage !</strong> @ViewBag.Message
                                </div>
                            }
                        </div>
                    </div>
                </div>

                @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
            </div>
            <div id="formBody" class="container-fluid">
                <div class="form-container">
                    <div class="form-lead">@Html.Raw(LanguageResource.RequiredFill)</div>
                    <div class="form-body-container">
                        <div class="form-horizontal">

                            <div class="form-group">
                                @Html.LabelFor(model => model.PaypalSetting.ClientId, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.PaypalSetting.ClientId, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.PaypalSetting.ClientId, "*", new { @class = "text-danger" })

                                    @Html.HiddenFor(model => model.PaypalSetting.Mode)
                                    @Html.HiddenFor(model => model.ApplicationSetting.SettingId)
                                    @Html.HiddenFor(model => model.ApplicationSetting.SettingName)
                                    @Html.HiddenFor(model => model.ApplicationSetting.IsSecured)
                                    @Html.HiddenFor(model => model.ApplicationSetting.IsActive)
                                    @Html.ValidationMessageFor(model => model.ApplicationSetting.SettingId)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.PaypalSetting.ClientSecret, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.PaypalSetting.ClientSecret, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.PaypalSetting.ClientSecret, "*", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.PaypalSetting.ConnectionTimeout, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.PaypalSetting.ConnectionTimeout, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.PaypalSetting.ConnectionTimeout, "*", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="form-group">
                                @Html.LabelFor(model => model.PaypalSetting.RequestRetries, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextAreaFor(model => model.PaypalSetting.RequestRetries, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.PaypalSetting.RequestRetries, "*", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="panel-footer">
            <div class="row">
                <div class='btn-toolbar pull-right'>
                    <div class='btn-group'>
                        <input type="button" class="btn btn-default resetPayPal" data-mode="@Model.PaypalSetting.Mode" data-form='@string.Format("frmPayPal{0}",Model.PaypalSetting.Mode)' data-url='@Url.Action("EditPaypalSetting", "Application")' value="@LanguageResource.Reset" />
                        <input type="button" class="btn btn-primary editPayPal" data-mode="@Model.PaypalSetting.Mode" data-form='@string.Format("frmPayPal{0}",Model.PaypalSetting.Mode)' data-url='@Url.Action("EditPaypalSetting", "Application")' value="@LanguageResource.Save" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}