@{
    ViewBag.Title = LanguageResource.CreateApplicationSetting;
}

@using Eagle.Core.Settings
@model Eagle.Services.Dtos.SystemManagement.ApplicationSettingEntry

<div class="panel panel-default">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", id = "frmCreateApplicationSetting", name = "frmCreateApplicationSetting", }))
    {
        <div class="panel-heading text-bold">
            <div class='page-header margin-top-5 margin-bottom-0'>
                <div class='btn-toolbar pull-right'>
                    <div class='btn-group'>
                        <input type="button" class="btn btn-default reset btnReset" data-mode="create" data-form="frmCreateApplicationSetting" data-url='@Url.Action("CreateSetting", "Application")' value="@LanguageResource.Reset" />
                        <input type="button" class="btn btn-primary save add create createSetting" data-mode="create" data-form="frmCreateApplicationSetting" data-url='@Url.Action("CreateSetting", "Application")' value="@LanguageResource.Save" />
                    </div>
                </div>
                <h4><span class="glyphicon glyphicon-star"></span> @LanguageResource.CreateApplicationSetting</h4>
            </div>
        </div>

        <div class="panel-body padding-top-0">
            <div id="formMessage" class="form-message">
                @Html.AntiForgeryToken()
                @Html.Partial("_MessagePartial")
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
            </div>

            <div id="formBody" class="form-horizontal">
                <div class="form-container">
                    <div class="form-lead">@Html.Raw(LanguageResource.RequiredFill)</div>
                    <div class="form-body-container">
                        <div class="form-horizontal">

                            <div class="form-group">
                                @Html.LabelFor(model => model.SettingName, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.SettingName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.SettingName)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.SettingValue, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.SettingValue, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.SettingValue)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.IsSecured, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <div class="checkbox-slider--b">
                                        <label>
                                            <input type="checkbox" id="IsSecured" name="IsSecured" value="true" checked="checked"><span></span><span class="text"></span>
                                        </label>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.IsSecured)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.IsActive, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.RadioButtonSwitchEnumFor(model => model.IsActive, ApplicationSettingStatus.Active)
                                    @Html.ValidationMessageFor(model => model.IsActive)
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="panel-footer">
            <div class="row">
                <div class='btn-toolbar pull-right'>
                    <div class='btn-group'>
                        <input type="button" class="btn btn-default reset btnReset" data-mode="create" data-form="frmCreateApplicationSetting" data-url='@Url.Action("CreateSetting", "Application")' value="@LanguageResource.Reset" />
                        <input type="button" class="btn btn-primary save add create createSetting" data-mode="create" data-form="frmCreateApplicationSetting" data-url='@Url.Action("CreateSetting", "Application")' value="@LanguageResource.Save" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>