@{
    ViewBag.Title = LanguageResource.EditDocumentFolder;
}

@using Eagle.Core.Settings
@model Eagle.Services.Dtos.SystemManagement.FileStorage.DocumentFolderEditEntry


@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", id = "frmEditDocumentFolder", name = "frmEditDocumentFolder", autocomplete = "off", @class = "form-horizontal" }))
{
    <div class="panel panel-default">
        <div class="panel-heading text-bold">
            <div class='page-header margin-top-5 margin-bottom-0'>
                <div class='btn-toolbar pull-right'>
                    <div class='btn-group'>
                        <input type="button" class="btn btn-default reset btnReset" data-mode="edit" data-form="frmEditDocumentFolder" data-id="@Model.FolderId" data-url='@Url.Action("Edit", "DocumentFolder")' value="@LanguageResource.Reset" />
                        <input type="button" class="btn btn-primary edit editDocumentFolder" data-mode="edit" data-form="frmEditDocumentFolder" data-url='@Url.Action("Edit", "DocumentFolder")' value="@LanguageResource.Save" />
                    </div>
                </div>
                <h4><span class="glyphicon glyphicon-star"></span> @LanguageResource.EditDocumentFolder</h4>
            </div>
        </div>

        <div class="panel-body padding-top-0">
            <div class="container-fluid">
                <div id="formMessage" class="form-message">
                    @Html.Partial("_MessagePartial")
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                </div>
                <div id="formBody" class="form-horizontal">
                    <div class="form-container">
                        <div class="form-lead">@Html.Raw(LanguageResource.RequiredFill)</div>
                        <div class="form-body-container">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    @Html.RequiredLabelFor(model => model.FolderName, new {@class = "control-label col-md-2"})
                                    <div class="col-md-7">
                                        @Html.TextBoxFor(model => model.FolderName, new {@class = "form-control", required = "required"})
                                        @Html.ValidationMessageFor(model => model.FolderName)

                                        @Html.HiddenFor(model => model.FolderId)
                                        @Html.ValidationMessageFor(model => model.FolderId)
                                    </div>
                                    @Html.LabelFor(model => model.FolderIcon, new {@class = "control-label col-md-2"})
                                    <div class="col-md-1 no-padding-left no-padding-right">
                                        <button class="btn btn-default iconpicker" data-icon="glyphicon-picture" data-arrow-class="btn-success" role="iconpicker"></button>
                                        <input type="hidden" id="FolderIcon" name="FolderIcon" class="form-control" value="">
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.RequiredLabelFor(model => model.ParentId, new {@class = "control-label col-md-2"})
                                    <div class="col-md-10">
                                        <input id="ParentId" name="ParentId" value="@Model.ParentId" class="easyui-combotree form-control cbxParentTree" data-url='@Url.Action("GetDocumentFolderTree", "DocumentFolder")' style="width: 100%;">
                                        @Html.ValidationMessageFor(model => model.ParentId)
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.RequiredLabelFor(model => model.FolderPath, new {@class = "control-label col-md-2"})
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.FolderPath, new {@class = "form-control"})
                                        @Html.ValidationMessageFor(model => model.FolderPath)
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Description, new {@class = "control-label col-md-2"})
                                    <div class="col-md-10">
                                        @Html.TextAreaFor(model => model.Description, new {rows = 6, columns = 40, maxlength = 4000, @class = "form-control"})
                                        @Html.ValidationMessageFor(model => model.Description)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.IsActive, new {@class = "control-label col-md-2"})
                                    <div class="col-md-10">
                                        <div class="checkbox">
                                            @Html.RadioButtonSwitchEnumFor(model => model.IsActive)
                                            @Html.ValidationMessageFor(model => model.IsActive, "", new {@class = "text-danger"})
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class='btn-toolbar pull-right'>
                    <div class='btn-group'>
                        <input type="button" class="btn btn-default reset btnReset" data-mode="edit" data-form="frmEditDocumentFolder" data-id="@Model.FolderId" data-url='@Url.Action("Edit", "DocumentFolder")' value="@LanguageResource.Reset" />
                        <input type="button" class="btn btn-primary edit editDocumentFolder" data-mode="edit" data-form="frmEditDocumentFolder" data-id="@Model.FolderId" data-url='@Url.Action("Edit", "DocumentFolder")' value="@LanguageResource.Save" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
