@model IEnumerable<Eagle.Services.Dtos.Business.PaymentMethodDetail>

<!-- Accordion -->
<div class="accordion-v2">
    <div id="payment-method-container" class="payment-method-container">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" href="#collapsePaymentMethod">
                        <i class="fa fa-exchange"></i> @LanguageResource.PaymentMethod
                    </a>
                </h4>
            </div>
            <div id="collapsePaymentMethod" class="panel-collapse collapse in">
                <div class="payment-method-inner">
                    @{
                        if (Model != null && Model.Any())
                        {
                            int j = 0;
                            foreach (var item in Model)
                            {
                                <div class="form-group">
                                    <label class="radio-inline">
                                        <input type="radio" id="PaymentInfo.PaymentMethodId_@j"
                                               name="PaymentInfo.PaymentMethodId"
                                               value="@item.PaymentMethodId" checked='@(j == 0)' /> @item.PaymentMethodName
                                    </label>
                                </div>
                                j++;
                            }
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Accordion -->