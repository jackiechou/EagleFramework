@model IEnumerable<Eagle.Services.Dtos.Business.TransactionMethodDetail>
<div class="accordion-v2">
    <div id="transation-method-container" class="transation-method-container">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" href="#collapsePaypal">
                        <i class="fa fa-paypal"></i> @Html.Raw(LanguageResource.TransactionMethod)
                    </a>
                </h4>
            </div>
            <div id="collapsePaypal" class="panel-collapse collapse in">
                <div class="transation-method-inner">
                    @*<a href="#"><img src="https://www.paypalobjects.com/webstatic/en_US/i/buttons/PP_logo_h_150x38.png" alt="PayPal"></a>*@
                    @{
                        if (Model != null && Model.Any())
                        {
                            int j = 0;
                            foreach (var item in Model)
                            {
                                <div class="form-group">
                                    <label class="radio-inline">
                                        <input type="radio" id="TransactionMethodId_@j"
                                               name="TransactionMethodId"
                                               value="@item.TransactionMethodId" checked='@(j == 0)' /> @item.TransactionMethodName
                                    </label>
                                </div>
                                j++;
                            }
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
