@using Eagle.Resources
<div class="modal hide fade modal-popup" aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" style="z-index:14005;background: #eee;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">@ViewBag.Title</h4>
            </div>
            <div class="modal-body">
                Content for the dialog / modal goes here.
            </div>
            <div class="modal-footer">
                <button class="btn btn-default" data-dismiss="modal" aria-hidden="true">@Html.Raw(LanguageResource.Close)</button>
                <button class="btn btn-primary">@Html.Raw(LanguageResource.Save)</button>
            </div>
        </div>
    </div>
</div>